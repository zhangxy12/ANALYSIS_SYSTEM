r\n    <div class=\"show_words\">\r\n      <div id=\"chars_word_cloud\" @mouseover=\"onMouseOver\" @mouseout=\"onMouseOut\"></div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  name: \"word_cloud\",\r\n  data() {\r\n    return {\r\n      timer: \"\",\r\n      myChart: \"\",\r\n      cloud_word: \"\",\r\n    };\r\n  },\r\n  methods: {\r\n    getCloudWord(id) {\r\n      this.$axios.get(\"word_cloud?tag_task_id=\" + id).then((res) => {\r\n        console.log(res.data);\r\n        this.cloud_word = res.data.data.data;\r\n        this.myWordCloud(res.data.data.data);\r\n      });\r\n    },\r\n    myWordCloud(data) {\r\n      let option;\r\n      if (\r\n        this.myChart != null &&\r\n        this.myChart != \"\" &&\r\n        this.myChart != undefined\r\n      ) {\r\n        this.myChart.dispose(); // 解决echarts dom已经加载的报错\r\n      }\r\n      this.myChart = this.$echarts.init(document.getElementById(\"chars_word_cloud\"));\r\n      // 指定图表的配置项和数据\r\n      option = {\r\n        tooltip: {\r\n          show: true,\r\n        },\r\n        series: [\r\n          {\r\n            type: \"wordCloud\",\r\n            sizeRange: [10, 50], // 文字范围\r\n            rotationRange: [-45, 90],\r\n            rotationStep: 45,\r\n            textRotation: [0, 45, 90, -45],\r\n            textStyle: {\r\n              color: function () {\r\n                return (\r\n                  \"rgb(\" +\r\n                  [\r\n                    Math.round(Math.random() * 200),\r\n                    Math.round(Math.random() * 100),\r\n                    Math.round(Math.random() * 300),\r\n                  ].join(\",\") +\r\n                  \")\"\r\n                );\r\n              },\r\n            },\r\n            data: data,\r\n          },\r\n        ],\r\n      };\r\n      this.myChart.setOption(option);\r\n      option && this.myChart.setOption(option);\r\n    },\r\n    // 鼠标移入词云区域时\r\n    onMouseOver() {\r\n      const wordCloudElement = document.getElementById(\"chars_word_cloud\");\r\n      wordCloudElement.style.cursor = 'pointer';  // 显示点击手指图标\r\n      wordCloudElement.style.boxShadow = '0px 0px 10px rgba(0, 0, 0, 0.2)'; // 添加阴影\r\n    },\r\n    // 鼠标移出词云区域时\r\n    onMouseOut() {\r\n      const wordCloudElement = document.getElementById(\"chars_word_cloud\");\r\n      wordCloudElement.style.cursor = 'default';  // 恢复默认光标\r\n      wordCloudElement.style.boxShadow = 'none'; // 移除阴影\r\n    },\r\n    // 词云点击事件\r\n    onWordCloudClick() {\r\n      console.log(\"词云区域被点击！\");\r\n      // 可以在这里加入跳转或其他点击事件的处理\r\n    }\r\n  },\r\n  mounted() {\r\n    this.$bus.$on(\"send_tag_task_id\", (tag_task_id) => {\r\n      console.log(\"这里是词云组件,收到了数据:\", tag_task_id);\r\n      this.getCloudWord(tag_task_id);\r\n    });\r\n    this.timer = setInterval(() => {\r\n      this.myWordCloud(this.cloud_word);\r\n    }, 5000);\r\n  },\r\n  beforeDestroy() {\r\n    this.$bus.$off(\"send_tag_task_id\");\r\n    clearInterval(this.timer);\r\n    this.timer = null;\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.word_cloud {\r\n  position: absolute;\r\n  width: 100%;\r\n  height: 30%;\r\n  background-color: #fff;\r\n  padding: 10px;\r\n}\r\n\r\n.word_cloud_top {\r\n  margin-left: 10px;\r\n}\r\n\r\n.w_title {\r\n  padding-top: 10px;\r\n  height: 50px;\r\n  text-align: center;\r\n  font-size: 20px;\r\n}\r\n\r\n#chars_word_cloud {\r\n  width: 100%;\r\n  height: 200px;\r\n  top: -10px;\r\n  transition: box-shadow 0.3s ease; /* 添加过渡效果 */\r\n}\r\n\r\n.icon {\r\n  position: relative;\r\n  top: 8px;\r\n}\r\n\r\n.title_text {\r\n  font-size: 18px;\r\n  font-weight: bold;\r\n  margin-left: 5px;\r\n}\r\n\r\n.word_cloud:hover #chars_word_cloud {\r\n  cursor: pointer; /* 鼠标悬停时显示手型光标 */\r\n  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* 鼠标悬停时显示阴影 */\r\n}\r\n</style>\r\n"]}]}